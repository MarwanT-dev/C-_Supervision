#include <iostream>
using namespace std;

// Improved isPrime function
bool isPrime(int num)
{
    if (num < 2) return false;  // ✅ fix: numbers < 2 are not prime

    for (int j = 2; j * j <= num; j++)  // ✅ fix: only check up to sqrt(num), not num/2
    {
        if (num % j == 0)
        {
            return false;
        }
    }
    return true;
}

int nth_prime(int n)
{
    if (n <= 0) return -1;   // ✅ fix: handle invalid input (like n = 0 or negative)

    int counter = 0;
    for (int current = 2; ; current++)  // ✅ fix: for loop is cleaner than while(true)
    {
        if (isPrime(current))
        {
            counter++;
            if (counter == n)
                return current;  // ✅ removed unreachable "break;" after return
        }
    }
}

int main()
{
    cout << nth_prime(1) << "\n";  // 2
    cout << nth_prime(5) << "\n";  // 11
    cout << nth_prime(10) << "\n"; // 29
}
