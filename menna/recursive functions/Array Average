#include<iostream>
using namespace std ;

int arrAverage(int arr[], int len, int idx=0)   // FIX: added idx parameter instead of using a global variable
{
    if(idx == len-1)
        return arr[idx] ;
    return arr[idx] + arrAverage(arr , len , idx+1) ;   // FIX: use idx+1 recursion instead of global sum counter
}
int main()
{
    int len ; cin>>len ;
    int arr[len] ;
    for(int i=0; i<len; i++)
    {
        cin>>arr[i] ;
    }
    cout<<(double)arrAverage(arr, len) / len ;

    return 0 ;
}
