#include<iostream>
using namespace std ;

#forward traversing 

double arr_average(double arr[], int len) {
	if (len == 1)
		return arr[0];

	double sub_result = arr_average(arr, len - 1);
	// Now this was average of len-1. So sum / (len-1)
	sub_result = sub_result * (len-1);

	return (sub_result + arr[len - 1] ) / len;
}
