#include<iostream>
using namespace std ;

int arrSum(int arr[], int len, int idx=0)   // FIX: removed global sum, replaced with idx parameter
{
    if(idx == len-1)
        return arr[idx] ;
    return arr[idx] + arrSum(arr , len , idx+1) ;   // FIX: recursion with idx+1
}
int main()
{
    int len ; cin>>len ;
    int arr[len] ;
    for(int i=0; i<len; i++)
    {
        cin>>arr[i] ;
    }
    cout<<arrSum(arr, len) ;

    return 0 ;
}
