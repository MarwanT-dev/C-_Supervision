#include<iostream>
using namespace std ;

void arrIncrement(int arr[],int len, int idx)
{
    if(len == idx)
        return ;
    cout<< (arr[idx] + idx )<<" " ;
    arrIncrement(arr , len , idx+1) ;   // FIX: use idx+1 instead of ++idx
}
int main()
{
    int len ; cin>>len ;
    int arr[len] ;
    for(int i=0; i<len; i++)
    {
        cin>>arr[i] ;
    }
    arrIncrement(arr, len, 0) ;

    return 0 ;
}
